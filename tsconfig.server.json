{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "outDir": "./game",
    "rootDir": "./server_src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true  // Required for project references
  },
  "include": ["./server_src/**/*"],
  "references": [
    { "path": "./shared_src" }  // Adjust the path if necessary
  ]
}
