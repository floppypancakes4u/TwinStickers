    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsc --project tsconfig.shared.json && node index.js'"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "phaser": "^3.80.1",
    "socket.io": "^4.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "type": "module",
  "devDependencies": {
    "ts-loader": "^9.5.1",
    "tsc-alias": "^1.8.10",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  }
}
